# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nexus_db
# For production: postgresql://user:password@production-host:5432/nexus_db

# Redis Configuration (for sessions and caching)
REDIS_URL=redis://localhost:6379
# For production: redis://production-host:6379

# Client Configuration
CLIENT_URL=http://localhost:3000
# For production: https://your-domain.com

# Security
JWT_SECRET=your-secret-key-here-change-in-production
SESSION_EXPIRY=604800000
REFRESH_EXPIRY=2592000000

# Feature Flags
MAX_MESSAGE_LENGTH=2000
MAX_ATTACHMENTS=4
MAX_ATTACHMENT_SIZE=10485760
ENABLE_GUEST_MODE=true

# Rate Limiting
RATE_LIMIT_MESSAGES=10
RATE_LIMIT_WINDOW=10000

# Logging
LOG_LEVEL=info
