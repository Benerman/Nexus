{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Nexus",
  "version": "1.0.0",
  "identifier": "com.nexus.desktop",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npx cross-env CI=false GENERATE_SOURCEMAP=false react-scripts build"
  },
  "app": {
    "windows": [
      {
        "title": "Nexus",
        "width": 1280,
        "height": 800,
        "minWidth": 940,
        "minHeight": 560,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; connect-src 'self' wss: https:; img-src 'self' data: https: blob:; media-src 'self' blob: data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "A modern chat and voice communication platform",
    "longDescription": "Nexus is a self-hosted chat and voice communication platform featuring text channels, voice channels with WebRTC, direct messaging, screen sharing, custom emojis, soundboards, and more.",
    "category": "SocialNetworking",
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libayatana-appindicator3-1"],
        "section": "net",
        "desktopTemplate": null
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEU0OEZBQ0Y5QTU3QTdCNzIKUldSeWUzcWwrYXlQNUtkNnZtZ0x2ZVhmM2lKZXlueVhxdVk5TWQyNmRiMlh6SG9aNUttYWlzdmwK",
      "endpoints": [
        "https://github.com/Benerman/Nexus/releases/latest/download/latest.json"
      ]
    }
  }
}
