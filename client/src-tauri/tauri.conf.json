{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Nexus",
  "version": "1.0.0",
  "identifier": "com.nexus.desktop",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run start",
    "beforeBuildCommand": "npx cross-env CI=false GENERATE_SOURCEMAP=false react-scripts build"
  },
  "app": {
    "windows": [
      {
        "title": "Nexus",
        "width": 1280,
        "height": 800,
        "minWidth": 940,
        "minHeight": 560,
        "resizable": true,
        "fullscreen": false,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com data:; connect-src 'self' wss: https:; img-src 'self' data: https: blob:; media-src 'self' blob: data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libayatana-appindicator3-1"]
      }
    }
  }
}
